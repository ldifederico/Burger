<body style="background: rgb(255, 214, 32);">
  <img src="../public/assets/img/burger.png">

  <h1>Eat-Da-Burger</h1>

  <ul>
    {{#each burgers}}
      {{#unless filet-o-fish}}
        {{> burgers/burger-block devoured=true}}
      {{/unless}}
    {{/each}}
  </ul>

  <ul>
    {{#each burgers}}
      {{#if filet-o-fish}}
        {{> burgers/burger-block notdevoured=false}}
      {{/if}}
    {{/each}}
  </ul>

  <form class="create-form">
    <div class="form-group">
      <input type="text" id="ca" name="name">
    </div>

    <div class="form-group">
      <button type="submit" name="notdevoured" value="0"> Devour it!
    </div>

    <button type="submit">Submit</button>
    <p>Enter a burger you want to eat. Click the "Submit" button.</p>
  </form>
</body>