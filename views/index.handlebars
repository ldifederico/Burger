<body style="background: rgb(255, 214, 32, 0.69); text-align:center">
  <img src="https://external-preview.redd.it/X2ybMJN6TqZeyJiLfWC2T5lO1sdEZTllxrDgLpZW9Tk.gif?width=640&crop=smart&format=png8&s=0a4100de2e608e5d4e845f7ce2635bcc37a038c5" style="width: 15%;">

  <h1 style="color: tomato;">Eat-Da-Burger!</h1>

  <ul>
    {{#each burgers}}
      {{#unless filet-o-fish}}
        {{> burgers/burger-block devoured=true}}
      {{/unless}}
    {{/each}}
  </ul>

  <ul>
    {{#each burgers}}
      {{#if filet-o-fish}}
        {{> burgers/burger-block notdevoured=false}}
      {{/if}}
    {{/each}}
  </ul>

  <form class="create-form">
    <div class="form-group">
      <button type="submit" name="notdevoured" value="0"> Devour it!
    </div>

    <br>

    <div class="form-group">
      <input type="text" id="ca" name="name">
    </div>

    <button type="submit">Submit</button>
    <p>Enter a burger you want to eat. Click the "Submit" button.</p>
  </form>
</body>